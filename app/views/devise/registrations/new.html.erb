<h2>Регистрация пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <form>
    <div class="input-group my-2" style="width: 250px" >
      <div class="input-group-prepend">
        <div class="input-group-text justify-content-center p-0", style="width: 40px">
          <%= fa_icon "user"%>
        </div>
      </div>
      <%= f.text_field :name, placeholder: "Имя", class: "form-control" %>
    </div>

    <div class="input-group my-2" style="width: 250px">
      <div class="input-group-prepend">
        <div class="input-group-text justify-content-center p-0", style="width: 40px">
          <%= fa_icon "envelope" %>
        </div>
      </div>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    </div>

    <div class="input-group my-2" style="width: 250px">
      <div class="input-group-prepend">
        <div class="input-group-text justify-content-center p-0", style="width: 40px">
          <%= fa_icon "key" %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Пароль", class: "form-control" %>
    </div>

    <div class="input-group my-2" style="width: 250px">
      <div class="input-group-prepend">
        <div class="input-group-text justify-content-center p-0", style="width: 40px">
          <%= fa_icon "key" %>
        </div>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Подтверждение пароля", class: "form-control" %>
    </div>
    <%= f.submit "Зарегистрироваться", class: "btn btn-secondary" %>
  </form>
<% end %>
<div class="my-2">
  <%= render "devise/shared/links", class: "my-2" %>
</div>

